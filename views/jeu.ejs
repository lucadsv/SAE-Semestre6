<%- include('fragments/head.ejs') %>
<body>
<%- include('fragments/nav.ejs') %>

<main>
  <div class="jeu-container">
    <h1>Le jeu du Juste Prix</h1>
    <p>Devine le nombre aléatoire entre 1 et 20 !</p>

    <div class="jeu-input">
      <label for="guess">Entrez un nombre entre 1 et 20</label>
      <input type="number" id="guess" min="1" max="20" placeholder="Entre ton nombre">
      <button id="submitGuess">Essayer</button>
    </div>

    <section class="current-game-history" aria-labelledby="current-game-history-title">
      <h2 id="current-game-history-title">Historique des coups (partie en cours)</h2>
      <p id="guessListHint" class="sr-only">La liste se met à jour après chaque essai.</p>
      <p id="guessStatus" class="sr-only" aria-live="polite"></p>
      <ul id="guessList" aria-describedby="guessListHint"></ul>
    </section>

    <table class="game-history-table">
      <caption class="sr-only">Historique des parties terminées</caption>
      <thead>
        <tr><th>Partie</th><th>Nombre de coups</th></tr>
      </thead>
      <tbody id="historyTable"></tbody>
    </table>
  </div>
</main>

<script src="/js/jeu.js"></script>
<%- include('fragments/footer.ejs') %>
</body>
</html>
