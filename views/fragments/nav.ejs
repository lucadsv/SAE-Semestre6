<header class="barnav">
  <a href="/" aria-label="Accueil ClusterLab">
    <img src="/images/ClusterLabLogo.png" alt="Logo ClusterLab" class="logo">
  </a>
  <h2 class="brand-title">ClusterLab</h2>
  <% if (isLoggedIn) { %>
    <div class="barnav-right">
      <button
        type="button"
        class="menu-burger"
        id="menu-toggle"
        aria-label="Ouvrir le menu utilisateur"
        aria-controls="menu-deroulant"
        aria-expanded="false"
      >
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </button>
      <% if (username === 'adminweb') { %>
        <div class="avatar-badge" aria-hidden="true"><div class="avatar-text">AW</div></div>
      <% } else if (username === 'sysadmin') { %>
        <div class="avatar-badge" aria-hidden="true"><div class="avatar-text">AS</div></div>
      <% } else { %>
        <div class="avatar-badge" aria-hidden="true"><div class="avatar-text"><%= (username || '?').charAt(0).toUpperCase() %></div></div>
      <% } %>
    </div>

    <nav class="menu-deroulant" id="menu-deroulant" aria-label="Menu utilisateur">
      <ul>
        <li><a href="/profil">Profil</a></li>
        <% if (username !== 'sysadmin' && username !== 'adminweb') { %>
          <li><a href="/jeu">Le Juste Prix</a></li>
          <li><a href="/calculs">Modules de Calcul</a></li>
        <% } %>
        <% if (username === 'adminweb') { %>
          <li><a href="/admin/manage-accounts">Gerer les comptes</a></li>
          <li><a href="/admin/create-accounts">Creer les comptes</a></li>
        <% } %>
        <% if (username === 'sysadmin') { %>
          <li><a href="/logs">Consulter les logs</a></li>
        <% } %>
        <li><a href="/logout">Deconnexion</a></li>
      </ul>
    </nav>
  <% } else { %>
    <nav>
      <ol>
        <li><a class="button_barnav" href="/register">Inscription</a></li>
        <li><a class="button_barnav" href="/login">Connexion</a></li>
      </ol>
    </nav>
  <% } %>
</header>
